    {
        // TODO: Implement change password
        await JSRuntime.InvokeVoidAsync("alert", "Tính năng đổi mật khẩu đang được phát triển!");
    }

    [Inject]
    private IJSRuntime JSRuntime { get; set; } = default!;
}